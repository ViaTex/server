# ============================================
# DISHASETU AUTHENTICATION SYSTEM - SERVER ENV
# ============================================

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV=development
PORT=5000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://user:password@localhost:5432/database_name
# IMPORTANT: Update with your actual PostgreSQL credentials
DATABASE_URL=postgresql://postgres:ankit123@localhost:5432/dishasetu

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate secrets with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_here_change_in_production_minimum_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production_minimum_32_chars

# Token expiration times
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Bcrypt password hashing rounds
BCRYPT_ROUNDS=12

# Login security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# ============================================
# CORS CONFIGURATION
# ============================================
# Frontend URL for CORS
CORS_ORIGIN=http://localhost:3000

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# For password reset and notifications
# Leave empty if not configured yet (Phase 2)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@dishasetu.com

# ============================================
# LOGGING
# ============================================
# Logging level: error, warn, info, debug
LOG_LEVEL=debug

# ============================================
# AUDIT
# ============================================
# Enable audit logging for security events
ENABLE_AUDIT_LOG=true

# ============================================
# RATE LIMITING (Optional - Future)
# ============================================
# Requests per window
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
