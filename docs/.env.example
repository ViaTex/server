# ============================================================================
# DISHASETU AUTHENTICATION SYSTEM - ENVIRONMENT VARIABLES
# ============================================================================

# Copy this file to .env and .env.local and fill in the values

# ============================================================================
# SERVER ENVIRONMENT
# ============================================================================

# Node environment
NODE_ENV=development

# Server port
PORT=5000

# Server base URL
BASE_URL=http://localhost:5000

# CORS origin (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/dishasetu

# ============================================================================
# JWT CONFIGURATION
# ============================================================================

# JWT Secret for access tokens (use strong random string in production)
# Generate with: openssl rand -hex 32
JWT_SECRET=your-secret-key-change-in-production-use-openssl-rand-hex-32

# JWT Secret for refresh tokens (use strong random string in production)
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production-use-openssl-rand-hex-32

# Access token expiration time
JWT_ACCESS_EXPIRES_IN=15m

# Refresh token expiration time
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# EMAIL CONFIGURATION (Optional - for password reset)
# ============================================================================

# SMTP host
SMTP_HOST=smtp.gmail.com

# SMTP port
SMTP_PORT=587

# SMTP username
SMTP_USER=your-email@gmail.com

# SMTP password (use app-specific password for Gmail)
SMTP_PASSWORD=your-app-password

# From email address
EMAIL_FROM=noreply@dishasetu.com

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=12

# Maximum failed login attempts before account lock
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in milliseconds (900000 = 15 minutes)
LOCKOUT_DURATION=900000

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3000

# ============================================================================
# API KEYS & INTEGRATIONS (Optional)
# ============================================================================

# Google OAuth (optional for OAuth signup)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# LinkedIn OAuth (optional for OAuth signup)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# ============================================================================
# NEXT.JS FRONTEND ENVIRONMENT
# ============================================================================

# API base URL for frontend (used in client/package.json .env)
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Enable debug mode (optional)
NEXT_PUBLIC_DEBUG=false
